@model TaskViewModel
<div>
    <form method="post" asp-controller="Task" asp-action="AddTask">
        <input asp-for="Id" type="hidden" />
        <p>
            <label>Текст задания:</label><br />
            <input type="text" asp-for="TaskText" class="form-control" id="exampleInputEmail1" placeholder="Введите тектс">
        </p>
        <div id="answers"></div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            <input type="submit" class="btn btn-primary" value="Сохранить" />
        </div>
    </form>


    <button class="btn btn-outline-secondary" onclick="addControl()">
        Добавить вариант ответа
    </button>
</div>

<script>
    function addControl() {
        let div = document.getElementById('answers');
        let answer = document.createElement('input');
        div.append(answer);
    }
</script>

<div class="modal fade" id="addAnswer" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Добавить вариант ответа</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <form method="post" asp-route-courseId="@Model.Id" asp-controller="Task" asp-action="AddAnswer">
                        <p>
                            <label>Название:</label><br />
                            <input type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="Введите ответ">
                        </p>
                        <p>
                            <label>Описание:</label><br />
                            <input class="form-control" type="checkbox" name="description" placeholder="Правильный ответ" />
                        </p>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                            <input type="submit" class="btn btn-primary" value="Создать" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

