@inject Automated.Course.System.BLL.Interfaces.ILanguageService LanguageService
@model List<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
</div>
@if (Model.Count != 0)
{
    @foreach (var course in Model)
    {
        <div class="course">
            <img src="~/Assets/Course.jpg" />
            <b><p id="course" class="coursename">@course.Name</p></b>
            <p class="coursediscription">@course.Discription</p>
            <p class="courselanguage">@LanguageService.GetLanguageById(course.LanguageId).LanguageName</p>
        </div>
    }
}
@if (Model.Count == 0)
{
    <p class="display-4">У вас пока нет курсов</p>
}
